<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/scanner_ipaddress_list_item_background">

    <ImageView
        android:id="@+id/tel_icon"
        android:focusable="false"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        android:contentDescription="@string/scanner_list_icon_desc"
        android:src="@android:drawable/ic_menu_info_details"
        android:background="@drawable/scanner_ipaddress_list_item_background"
        android:clickable="true"/>

    <TextView
        android:id="@+id/ItemName"
        tools:text="ItemName"
        android:focusable="false"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/ItemIP"
        tools:text="192.168.0.1"
        android:focusable="false"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="bottom|right"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textStyle="bold"
        android:singleLine="true"/>


</LinearLayout><!-- From: file:/C:/Users/Marco/AndroidStudioProjects/SMB%20Explorer/networkexplorer/src/main/res/layout/scanner_ipaddress_list_view.xml -->